<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:TriggerPoint.ViewModel"
                    >


    <vm:ViewModelLocator x:Key="Locator" />

    <Color x:Key="PrimaryColor" A="255" R="35" G="39" B="48"></Color>
    <Color x:Key="SecondaryColor" A="255" R="0" G="97" B="152"></Color>
    


    <SolidColorBrush x:Key="Gray" Color="{Binding Source={StaticResource Locator}, Path=Settings.PrimaryColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="Blue" Color="{Binding Source={StaticResource Locator}, Path=Settings.SecondaryColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="White" Color="{Binding Source={StaticResource Locator}, Path=Settings.BgColor}"></SolidColorBrush>

</ResourceDictionary>